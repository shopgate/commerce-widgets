{
  "name": "@shopgate/commerce-widgets",
  "version": "1.0.0",
  "description": "Shopgate Commerce Widgets Extension.",
  "repository": "github:shopgate/commerce-widgets",
  "bugs": "https://github.com/shopgate/commerce-widgets/issues",
  "homepage": "https://github.com/shopgate/commerce-widgets",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "eslint --parser babel-eslint --ignore-path .gitignore --ignore-path .eslintignore  --ext .js --ext .jsx .",
    "pre-build": "rimraf ./dist",
    "build-process": "babel src --out-dir dist --no-comments --ignore spec.js,spec.jsx,__snapshots__,.eslintrc.js,dist,coverage,node_modules",
    "post-build": "git add -A",
    "build": "npm run pre-build && npm run build-process && npm run post-build",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-module-resolver": "3.0.0-beta.0",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1"
  },
  "devDependencies": {
    "@shopgate/eslint-config": "^1.0.2",
    "@shopgate/pwa-unit-test": "github:shopgate/pwa-unit-test",
    "coveralls": "^2.13.1",
    "enzyme": "2.9.1",
    "eslint-import-resolver-babel-module": "4.0.0-beta.1",
    "jest": "20.0.4",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2"
  },
  "peerDependencies": {
    "react": "15.x",
    "react-dom": "15.x",
    "@shopgate/pwa-common": "*",
    "@shopgate/pwa-common-commerce": "*"
  }
}
